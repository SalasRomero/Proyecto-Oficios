<div class="container mt-5">
  
    <div class="row">
       <div class="col-md-5 mx-auto">
           <div class="card animated bounceInDown">
               <div class="card-body">
                   <div class="card-img-top text-center">
                       <img src="../img/logo.jpg" alt="" class="rounded-circle" style="width: 10rem">
                   </div>
                   <h2 class="text-center text-uppercase">Login:</h2>
                   <form action="../autenticacion/crearempresa" method="POST">
                       <div class="form-group">
                           <input type="text" class="form-control shadow " name="nombre" required autofocus placeholder="Nombre">
                       </div>
                       <div class="form-group">
                           <input type="email" class="form-control shadow " name="correo" required placeholder="Correo electrónico">
                       </div>
                       <div id="mensaje" class="alert alert-danger" style="display: none;">
                           <p>Error las contraseñas no coinciden</p>
                       </div>
                       <div class="form-group">
                           <input type="password" class="form-control shadow" name="password" id="password" required placeholder="Password">
                       </div>
                        <div class="form-group">
                           <input type="password"  class="form-control shadow" onchange="enviar()" name="rpassword" id="rpassword" required placeholder="Repite el Password">
                       </div>
                       <div class="form-group">
                           <input type="tel"  class="form-control shadow"  name="telefono" maxlength="10" required placeholder="Teléfono">
                       </div>
                        </div>                       
                       <button class="btn btn-success btn-block shadow" id="boton">Registrar</button>
                   </form>
                  
                   
               </div>
           </div>
       </div>
</div>
</div>
